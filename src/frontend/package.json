{
  "name": "frontend",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit",
    "typecheck:strict": "tsc --noEmit --strict",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "if [ -d ../.git ]; then cd .. && husky src/frontend/.husky; fi || true",
    "clean": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true && rm -rf .next out .turbo",
    "clean:all": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true && rm -rf .next out .turbo node_modules package-lock.json"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
